<?xml version="1.0" encoding="utf-8"?>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >
    <TableRow
        android:layout_height="100dp"
        android:layout_width="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Casual Games"
            android:id="@+id/textView2"
            android:layout_marginLeft="100dp" />
    </TableRow>


    <HorizontalScrollView
        android:layout_column="0">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="100dp"
                android:layout_height="100dp">

            </TableRow>

            <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton2"
                android:layout_column="0"
                android:onClick="onClick1"
                android:background="@mipmap/sodoku"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton3"
                android:onClick="onClick1"
                android:background="@mipmap/sopadeletras"
                android:layout_column="1"
                android:layout_marginTop="50dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button2"
                android:layout_column="0"
                android:onClick="onClick1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="100dp"
                android:singleLine="true"
                android:background="@mipmap/playgameicn" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="onClick1"
                android:id="@+id/button8"
                android:layout_column="1"
                android:layout_marginBottom="80dp"
                android:background="@mipmap/playgameicn" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton4"
                android:layout_column="0"
                android:onClick="onClick1"
                android:background="@mipmap/tresenraya"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="100dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton5"
                android:onClick="onClick1"
                android:layout_column="1"
                android:background="@mipmap/crucigrama" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="onClick1"
                android:id="@+id/button4"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="50dp"
                android:background="@mipmap/playgameicn" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="onClick1"
                android:id="@+id/button5"
                android:layout_column="1"
                android:layout_marginBottom="50dp"
                android:background="@mipmap/playgameicn" />
        </TableRow>


        </TableLayout>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageButton7"
                    android:layout_column="0"
                    android:onClick="onClick1"
                    android:background="@mipmap/pacmanicon"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp" />



            </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick1"
                    android:id="@+id/button9"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginBottom="80dp"
                    android:background="@mipmap/playgameicn" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:id="@+id/button7"
            android:onClick="onClickSalir"
            android:layout_column="0"
            android:layout_marginLeft="130dp"
            android:background="@mipmap/exiticon"
            android:layout_marginBottom="50dp" />

    </TableRow>

</TableLayout>
